# Copia este archivo a `.env` en cada entorno y ajusta valores según corresponda.

# --- Configuración base ---
NODE_ENV=development
PORT=4001
DATABASE_URL=mysql://user:password@localhost:3306/bitacora

# URLs públicas usadas en correos, CORS y generación de enlaces.
SERVER_PUBLIC_URL=http://localhost:4001
FRONTEND_URL=http://localhost:5173
APP_BASE_URL=http://localhost:5173
BASE_URL=http://localhost:4001
CORS_ALLOWED_ORIGINS=
TRUST_PROXY=false

# Cookies y sesiones
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=

# Rate limiting (valores en milisegundos / solicitudes).
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX=10
REFRESH_RATE_LIMIT_WINDOW_MS=900000
REFRESH_RATE_LIMIT_MAX=30

# JWT / autenticación
JWT_SECRET=change-me
JWT_REFRESH_SECRET=change-me-too
EMAIL_VERIFICATION_TOKEN_TTL_HOURS=48
PASSWORD_RESET_TOKEN_TTL_MINUTES=60

# --- Servicios externos ---
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# CometChat (solo si está habilitado)
COMETCHAT_APP_ID=
COMETCHAT_REGION=
COMETCHAT_API_KEY=

# SMTP / correo
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=no-reply@bitacora.local
EMAIL_VERIFICATION_URL=http://localhost:5173/verificar
PASSWORD_RESET_URL=http://localhost:5173/restablecer
COMMITMENT_REMINDER_CC=
COMMITMENT_REMINDER_BCC=
COMMITMENT_REMINDER_SUBJECT=Recordatorio de compromisos
COMMITMENT_REMINDER_CRON=0 6 * * *
COMMITMENT_REMINDER_DAYS_AHEAD=2
REMINDER_TIMEZONE=America/Bogota

# Archivos y almacenamiento
UPLOADS_DIR=./uploads
STORAGE_DRIVER=local
STORAGE_PUBLIC_URL=
S3_BUCKET=
S3_REGION=us-east-1
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FORCE_PATH_STYLE=false

# Logs
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log

# Otros
CRON_XML_MAX_NAME_LENGTH=512
