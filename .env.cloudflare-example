# Ejemplo de configuración para Cloudflare R2
# Copia estos valores a tu archivo .env principal

# Configuración Cloudflare R2
CLOUDFLARE_ACCOUNT_ID=tu-account-id-aqui
CLOUDFLARE_R2_BUCKET=bdo-uploads
CLOUDFLARE_R2_ACCESS_KEY_ID=tu-access-key-id-aqui  
CLOUDFLARE_R2_SECRET_ACCESS_KEY=tu-secret-access-key-aqui
CLOUDFLARE_R2_PUBLIC_URL=https://files.tudominio.com

# Cambiar el driver de storage
STORAGE_DRIVER=cloudflare

# Para producción con Cloudflare
TRUST_PROXY=true
COOKIE_SECURE=true
COOKIE_SAMESITE=none