# Common
NODE_ENV=development
PORT=4001
DATABASE_URL="mysql://user:password@localhost:3306/bitacora_db"
JWT_SECRET=change-me

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log

# CORS / Frontend
FRONTEND_URL=http://localhost:5173

# Storage
STORAGE_DRIVER=local
UPLOADS_DIR=uploads
STORAGE_PUBLIC_URL=http://localhost:4001/uploads

# S3 (only when STORAGE_DRIVER=s3)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=
S3_FORCE_PATH_STYLE=false

# Cron reminders
COMMITMENT_REMINDER_CRON=0 6 * * *
COMMITMENT_REMINDER_DAYS_AHEAD=2
REMINDER_TIMEZONE=America/Bogota

# Swagger
ENABLE_SWAGGER=true
